<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.1.dtd">
<suite name="MainTestsSuite" verbose="2" parallel="instances">
    <test name="MainTestsTest" thread-count="3">
        <classes>
            <class name="org.example.tests.MainTests">
            <methods>
                <include name="firstTest"/>
                <include name="secondTest"/>
                <include name="thirdTest"/>
            </methods>
            </class>
        </classes>
    </test>
    <test name="OthersTests" thread-count="3">
            <classes>
                <class name="org.example.tests.AdditionalTests"/>
                <class name="org.example.tests.PrioritTests"/>
            </classes>
    </test>
</suite>